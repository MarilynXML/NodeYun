<% var title="云-分享内容",
	styles = ['/public/styles/css/libs/markitup.css',
			'/public/styles/css/libs/markitupset.css',
			'/public/styles/css/share.css'];%>
<% include head %>

<% include templates/iviewer %>

<% include templates/header %>
<div class="container-fluid">
	<input type="hidden" id="cloud-url" value="<%= cloudUrl %>">
	<div class="file-banner">
		<a href="javascript:void(0)" class="btn btn-primary btn-download"><i class="fa fa-download fa-lg"></i>下载</a>
	</div>
	<ul class="files">
		<% include templates/file_banner %>
		
		<% shares.forEach(function(file,index){ %>
			<% include templates/share_detail %>
		<% });%>
	</ul>
	<% include templates/audio_bar %>

	<% include templates/video %>
	<div class="share-comments">
		<ul class="comment-list"></ul>
		<div class="divider"></div>
		<form action="/share" method="post" class="answer comment-textarea">
			<div class="form-group">
				<input type="hidden" id="share-id" value="<%= shares[0].s_id %>">
				<input type="hidden" id="receiver-id" value="<%= shares[0].user_id %>">
			</div>
			<div class="form-group">
				<textarea id="markItUp" class="form-control" cols="80" rows="6" name="comment" required></textarea>
			</div>
			<div class="form-group submit">
			    <input type="submit" class="btn btn-primary form-control" id="submit" value="提交">
			</div>
		</form>
	</div>

	
</div>
<div class="video-overlay"></div>
<% var main = 'share' %>
<% include foot %>