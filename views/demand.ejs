<% var title = '云-求资源',
	styles=['/public/styles/css/libs/markitup.css',
		'/public/styles/css/libs/markitupset.css',
		'/public/styles/css/demand.css'
]; %>
<% include head %>

<% include templates/header %>

<div class="container">
	<form action="/community/demand" method="post">
		<div class="form-group clearfix">
		    <label for="title" class="col-sm-2 control-label">资源标题</label>
		    <div class="col-sm-6">
		      <input type="text" class="form-control" id="title" name="title" placeholder="标题" required>
		    </div>
		    <label for="tag" class="col-sm-1 control-label">资源类型</label>
		    <div class="col-sm-3">
		    	<select name="type" id="type">
		    		<option value="music">音乐</option>
		    		<option value="vedio">视频</option>
		    		<option value="document">文档</option>
		    		<option value="image">图片</option>
		    		<option value="other">其他</option>
		    	</select>
		    </div>
		</div>
		<div class="form-group">
		    <label for="description" class="col-sm-2 control-label">资源描述</label>
		    <div class="col-sm-10">
				<textarea id="markItUp" class="form-control" cols="80" rows="10" name="description" required></textarea>
		    </div>
		</div>
		<div class="form-group">
			<div class="col-sm-10 col-sm-offset-2 submit">
		      <input type="submit" class="btn btn-primary form-control" id="submit" value="提交">
		    </div>
		</div>
	</form>
</div>
<% var main='community' %>

<% include foot %>

